        "# **Fancy indexing: Boolean**"
      ],
      "metadata": {
        "id": "VVUCnHpPanTW"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "x = torch.arange(24).reshape(2,3,4)\n",
        "print(x)\n",
        "\n",
        "criteron = (x>8) | (x%3==0)\n",
        "#criteron = (x > 10) and (x % 2 == 1)\n",
        "print(criteron)\n",
        "\n",
        "# Boolean fancy indexing\n",
        "y = x[criteron]\n",
        "print(y)\n",
        "print(y.shape)"
      ],
